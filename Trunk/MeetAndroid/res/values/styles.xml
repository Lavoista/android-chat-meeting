<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->

    <style name="App_EditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/rettangolo</item>
        <item name="android:layout_height">45dip</item>
    </style>

    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <color name="custom_theme_color">#ff2222</color>
    <color name="title_background">#12c119</color>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <!-- <item name="android:textStyle">@style/editTxt_theme</item> -->
        <item name="android:editTextStyle">@style/App_EditTextStyle</item>
        <item name="android:actionBarStyle">@style/WindowTitleBackground</item>
    </style>
    
    <style name="WindowTitleBackground" parent="android:Widget.Holo.Light.ActionBar.Solid.Inverse">>     
        <item name="android:background">@color/title_background</item>
    </style>
    

    <style name="AppThemeNoTitleBar" parent="AppTheme" >
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>