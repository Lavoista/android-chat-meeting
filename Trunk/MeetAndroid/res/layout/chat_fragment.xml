<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/chat_background"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/messages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="bottom" >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp" 
			android:background="#999999">
            <TableRow
				android:paddingTop="4dp">
			<LinearLayout >
                <ImageButton
                    android:id="@+id/ImageButton01"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/smileicon"/>
                <ImageButton
                    android:id="@+id/ImageButton02"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="18dp"
                    android:background="@drawable/galleryicon"/>
                <ImageButton
                    android:id="@+id/ImageButton03"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="18dp"
                    android:background="@drawable/cameraicon"/>
                <ImageButton
                    android:id="@+id/ImageButton04"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="18dp"
                    android:background="@drawable/microphone"/>
                <TextView 
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
                </LinearLayout>
            </TableRow>

            <TableRow>

                <EditText
                    android:id="@+id/insertMessage"
                    android:layout_width="200dp"
                    android:layout_weight="4"
                    android:hint="@string/WriteMessage"
                    android:inputType="textMultiLine"
                    android:selectAllOnFocus="true" >

                    <requestFocus />
                </EditText>

                <Button
                    android:id="@+id/rotateRightButton"
                    android:layout_width="100dp"
                    android:layout_weight="1"
                    android:text="@string/Send"
                    android:textColor="#ffffff" />
            </TableRow>
        </TableLayout>
    </RelativeLayout>

</RelativeLayout>